<div class="flex justify-end pb-4">
  <%= form_with(url: search_path, method: "get") do |form| %>
    <%= form.text_field :keyword, placeholder: "Search by keyword", class:"rounded-md" %>
    <%= form.collection_select :genre_id, Genre.all, :id, :name, { prompt: "Select Genre" }, class:"rounded-md" %>
    <%= submit_tag("🔍", class: "btn p-2 px-4 rounded-md bg-gray-200 mr-5") %>
  <% end %>
</div>