
<% if user_signed_in? %>
<div class="flex justify-between mx-auto py-2 bg-slate-900 text-yellow-500 items-center font-semibold">
  <p class="mx-2 ml-10 text-white">Welcome</p>
   <p class="mr-auto"><%= current_user.email %></p>
  <div class="flex items-center ">
    <p class="mx-4 text-sky-500 hover:text-sky-400 hover:underline"><%= link_to("My Orders", orders_path) %></p>
    <%= render partial: 'cart/cart' %>
    <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "mx-4 text-sky-500 hover:text-sky-400 hover:underline" %>
  </div>
</div>
<div class="flex justify-end">
<% if notice.present? %>
  <p class="notice p-3 mx-4 font-semibold text-green-700 bg-gray-300 rounded-lg"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert p-3 mx-4 font-semibold text-red-700 bg-gray-200 rounded-lg"><%= alert %></p>
<% end %>
</div>
<% else %>
<div class="flex justify-between mx-auto py-2 bg-slate-900 text-yellow-500 items-center font-semibold">
  <p class="mx-2 ml-10 text-white">Welcome</p>
  <p class="mr-auto">Guest!</p>
  <div class="flex items-center text-xl ">
    <%= render partial: 'cart/cart' %>
    <%= button_to "Sign in", new_user_session_path, class: "mx-4 mr-10 text-sky-500 hover:text-sky-400 hover:underline" %>
  </div>
</div>
<% end %>